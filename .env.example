# RE Engine Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: 'csv' (development) or 'postgresql' (production)
DB_TYPE=csv

# CSV Configuration (Development)
DATA_DIR=./data

# PostgreSQL Configuration (Production)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=reengine
# DB_USERNAME=postgres
# DB_PASSWORD=your_password
# DB_SSL=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
HOST=localhost
NODE_ENV=development

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=localhost

# =============================================================================
# OPENCLAW INTEGRATION
# =============================================================================
OPENCLAW_CONFIG_PATH=~/.openclaw
OPENCLAW_API_KEY=your_openclaw_api_key

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================
# Ollama Configuration
OLLAMA_API_KEY=your_ollama_api_key_here
OLLAMA_BASE_URL=http://127.0.0.1:11434/v1
OLLAMA_MODEL=qwen:7b
OLLAMA_TIMEOUT=30000

# Ollama Device Authentication
OLLAMA_DEVICE_KEY=your_ssh_device_key_here

# Ollama Service Configuration
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_DELAY=1000
OLLAMA_HEALTH_CHECK_INTERVAL=60000
OLLAMA_METRICS_ENABLED=true
OLLAMA_CACHE_ENABLED=true
OLLAMA_CACHE_TTL=3600000

# Ollama Model Defaults
OLLAMA_DEFAULT_TEMPERATURE=0.7
OLLAMA_DEFAULT_MAX_TOKENS=1000
OLLAMA_DEFAULT_TOP_P=0.9
OLLAMA_DEFAULT_TOP_K=40

# Google Vertex AI Configuration
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_REGION=us-central1
VERTEX_AI_SERVICE_ACCOUNT_EMAIL=vertex-ai-service@your-project.iam.gserviceaccount.com
VERTEX_AI_API_KEY=your_vertex_ai_api_key_here
VERTEX_AI_MODEL_ID=text-bison
VERTEX_AI_EMBEDDING_MODEL_ID=textembedding-gecko

# OAuth 2.0 Configuration (Preferred over API Key)
VERTEX_AI_OAUTH_CLIENT_ID=your_oauth_client_id_here
VERTEX_AI_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
VERTEX_AI_OAUTH_REDIRECT_URI=http://localhost

# Claude on Vertex AI Configuration (Preferred for Desktop Apps)
CLAUDE_VERTEX_PROJECT_ID=your-gcp-project-id
CLAUDE_VERTEX_REGION=global
CLAUDE_VERTEX_OAUTH_CLIENT_ID=your_oauth_client_id_here
CLAUDE_VERTEX_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
CLAUDE_VERTEX_OAUTH_REDIRECT_URI=http://localhost
CLAUDE_VERTEX_MODEL_ID=claude-sonnet-4-5@20250929
CLAUDE_VERTEX_MAX_TOKENS=4096
CLAUDE_VERTEX_TEMPERATURE=0.7

# Vertex AI Service Configuration
VERTEX_AI_MAX_RETRIES=3
VERTEX_AI_RETRY_DELAY=1000
VERTEX_AI_TIMEOUT=60000
VERTEX_AI_CACHE_ENABLED=true
VERTEX_AI_CACHE_TTL=3600000

# Vertex AI Model Defaults
VERTEX_AI_DEFAULT_TEMPERATURE=0.7
VERTEX_AI_DEFAULT_MAX_TOKENS=1024
VERTEX_AI_DEFAULT_TOP_P=0.9
VERTEX_AI_DEFAULT_TOP_K=40
VERTEX_AI_DEFAULT_CANDIDATE_COUNT=1

# =============================================================================
# EMAIL CONFIGURATION (SpaceEmail)
# =============================================================================
SPACEMAIL_USER=your-email@domain.com
SPACEMAIL_PASS=your_password
SPACEMAIL_IMAP_HOST=imap.spaceemail.com
SPACEMAIL_IMAP_PORT=993
SPACEMAIL_SMTP_HOST=smtp.spaceemail.com
SPACEMAIL_SMTP_PORT=587

# =============================================================================
# WHATSAPP CONFIGURATION
# =============================================================================
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_WEBHOOK_URL=http://localhost:3000/webhook/whatsapp

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=http://localhost:3000/webhook/telegram

# =============================================================================
# BROWSER AUTOMATION (Playwright)
# =============================================================================
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_TIMEOUT=60000
PLAYWRIGHT_RETRIES=2
BROWSER_PROFILE_PATH=./browser-profiles

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_key_here
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
TRACING_ENABLED=false

# =============================================================================
# WEB DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD_PORT=3000
DASHBOARD_HOST=localhost
DASHBOARD_TITLE="RE Engine Dashboard"

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=false
HOT_RELOAD=true
SOURCE_MAPS=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Set these when deploying to production
# NODE_ENV=production
# LOG_LEVEL=warn
# PLAYWRIGHT_HEADLESS=true
# DEBUG=false
# SOURCE_MAPS=false
